<Window x:Class="bevasarrlolista.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bevasarrlolista"
        mc:Ignorable="d"
        Title="Bevásárlólista" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="dataGrid" Grid.Row="0" ColumnWidth="*"></DataGrid>
        <ScrollViewer Grid.Row="1">
            <GroupBox Grid.Row="1" Margin="10" Header="Termékek">
                <WrapPanel Grid.Row="1">
                    <Button Content="Reset"   Margin="10" Click="Reset"></Button>
                    <Button Content="Hozzáadás"   Margin="10" Click="addWindow"></Button>
                    <Button Content="Törlés"   Margin="10" Click="delete"></Button>
                    <Button Content="A típus 3 legdrágább"   Margin="10" Click="aTipusHaromLegdragabb"></Button>
                    <Button Content="Top 5 összérték szerint"   Margin="10" Click="TopOtOsszertek"></Button>
                    <Button Content="Menyniség nagyobb mint 1"   Margin="10" Click="MennyisegNagyobbMint1"></Button>
                    <Button Content="ArSzerintCsokkeno"   Margin="10" Click="ArSzerintCsokkeno"></Button>
                    <Button Content="MindenDAmiTobbMint500"   Margin="10" Click="MindenDAmiTobbMint500"></Button>
                    <Button Content="NevPluszOsszertekABC"   Margin="10" Click="NevPluszOsszertekABC"></Button>
                    <Button Content="TipusDarabPluszOsszertek"   Margin="10" Click="TipusDarabPluszOsszertek"></Button>
                    <Button Content="TipusAtlagar"   Margin="10" Click="TipusAtlagar"></Button>
                    <Button Content="LegnagyobbOsszertekKategoriankent"   Margin="10" Click="LegnagyobbOsszertekKategoriankent"></Button>
                    <Button Content="BEsCTipus1000NelKisebb"   Margin="10" Click="BEsCTipus1000NelKisebb"></Button>
                    <Button Content="DTipusNAgyobbMint500FtMindenEgysegAr"   Margin="10" Click="DTipusNAgyobbMint500FtMindenEgysegAr"></Button>
                    <Button Content="nagyobbMint10dbEsKisebbMint1000Ft"   Margin="10" Click="nagyobbMint10dbEsKisebbMint1000Ft"></Button>
                    <Button Content="OsszertekNagyobbMint2000ABCTipus"  Margin="10" Click="OsszertekNagyobbMint2000ABCTipus"></Button>
                    <Button Content="TermekNevPluszTipus"  Margin="10" Click="TermekNevPluszTipus"></Button>
                    <Button Content="LegertekesebbTermekTipusonkentTipusTermekEgysegar"  Margin="10" Click="LegertekesebbTermekTipusonkentTipusTermekEgysegar"></Button>
                    <Button Content="OsszesDarabszamTipusonkent"  Margin="10" Click="OsszesDarabszamTipusonkent"></Button>
                    <Button Content="NullaForintosTermekek"  Margin="10" Click="NullaForintosTermekek"></Button>
                    <Button Content="Csak kenyerek" Width="150" Margin="5" Click="kenyerek"/>
                    <Button Content="Megegyező ár" Width="150" Margin="5" Click="egyezoAr" />
                    <TextBox x:Name="textBox" Width="150" Margin="5" TextChanged="Valtozas"></TextBox>
                    <Button Content="Egyező termékek" Width="150" Margin="5" Click="egyezo"/>
                    <ProgressBar x:Name="priceProgressBar" Width="100" Height="20" Margin="10" Value="0"/>
                    <Button Content="Nem C kategóriás" Width="150" Margin="5" Click="nemc"/>
                    <Button Content="Név hossz szerinti termékek" Width="150" Margin="5" Click="nevHosszSzerint"/>
                    <Button Content="A tipus Össz ár" Width="150" Margin="5" Click="aTipusOsszAr"/>
                    

                </WrapPanel>
            </GroupBox>
        </ScrollViewer>
    </Grid>
</Window>
